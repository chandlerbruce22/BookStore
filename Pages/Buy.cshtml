@page
@model BookStore.Pages.BuyModel
@{
}
<!-- The shopping cart information page.-->
<h2> Your Cart</h2>

<table class="table table-borded table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        <!-- For loop to print out the information in the user's shopping cart. -->
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Book.Title</td>
                <td>@line.Quantity</td>
                <td>$@line.Book.Price</td>
                <td>@((line.Quantity * @line.Book.Price).ToString("c"))</td>
            </tr>
        <td class="text-center">
            <form asp-page-handler="Remove" method="post">
                <input type="hidden" name="BookId" value="@line.Book.BookId" />
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
            </form>
        </td>
    }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total:</td>
                <td>@Model.Cart.ComputeTotalSum().ToString("c")</td>
            </tr>
        </tfoot>
    </table>
    <!-- Continue shopping button to go back to the book list. -->

    <div class="text-center">
        <a class="btn btn=primary" href="@Model.ReturnUrl">Continue Shopping</a>
    </div>